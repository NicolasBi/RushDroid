<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    tools:context="bizzo0_munro.rushdroid.Options"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titreOptions"
                android:id="@+id/texteTitreStatistiques"
                android:textSize="35sp"

                android:fontFamily="Cambria Math" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retour"
                android:id="@+id/button9"
                android:width="120dp"
                android:fontFamily="Cambria Math"
                android:focusable="false"
                android:enabled="true"
                android:focusableInTouchMode="false"
                android:onClick="onClickRetourAuMenuPrincipal"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_horizontal"
            android:background="@drawable/background_gris_ab"
            android:layout_marginBottom="10sp"
            android:id="@+id/llab5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_horizontal"
                android:background="@drawable/background_gris_ab"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/llab1">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/musique"
                        android:id="@+id/textView34"
                        android:textSize="25sp"

                        android:fontFamily="Cambria Math"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/transparent" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@color/transparent"
                    android:layout_marginBottom="15dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activer"
                            android:id="@+id/textView2"
                            android:textSize="17sp"
                            android:fontFamily="Cambria Math"
                            android:background="@color/transparent" />
                    </FrameLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxMusique"
                        android:clickable="true"
                        android:enabled="true"
                        android:background="@color/transparent"
                        android:buttonTint="@color/gris"
                        android:checked="false"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_horizontal"
                android:background="@drawable/background_gris_ab"
                android:layout_marginBottom="10dp"
                android:id="@+id/llab2">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/effetssonores"
                        android:id="@+id/textView7"
                        android:textSize="25sp"
                        android:fontFamily="Cambria Math"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/transparent" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@color/transparent"
                    android:layout_marginBottom="15dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginRight="30dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activer"
                            android:id="@+id/textView8"
                            android:textSize="17sp"
                            android:fontFamily="Cambria Math"
                            android:background="@color/transparent" />
                    </FrameLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxEffetsSonores"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:enabled="true"
                        android:buttonTint="@color/gris"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:gravity="center_horizontal"
                android:background="@drawable/background_gris_ab"
                android:layout_marginBottom="10dp"
                android:id="@+id/llab6">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vibrations"
                        android:id="@+id/textView79"
                        android:textSize="25sp"
                        android:fontFamily="Cambria Math"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/transparent"/>
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@color/transparent"
                    android:layout_marginBottom="15dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activer"
                            android:id="@+id/textView80"
                            android:textSize="17sp"
                            android:fontFamily="Cambria Math"
                            android:background="@color/transparent"/>
                    </FrameLayout>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkBoxVibrations"
                        android:background="@color/transparent"
                        android:clickable="true"
                        android:enabled="true"
                        android:buttonTint="@color/gris"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_gris_ab"
                android:gravity="center_horizontal"
                android:id="@+id/llab3">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme"
                        android:id="@+id/textView56"
                        android:textSize="25sp"

                        android:fontFamily="Cambria Math"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/transparent" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/themelight"
                        android:id="@+id/textView3"
                        android:textSize="20sp"
                        android:fontFamily="Cambria Math"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center_horizontal"/>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:layout_gravity="center_horizontal">

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/switchTheme"
                            android:enabled="true"
                            android:checked="false"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:nestedScrollingEnabled="false"
                            android:clickable="true"
                            android:background="@color/transparent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/themedark"
                        android:id="@+id/textView6"
                        android:textSize="20sp"
                        android:fontFamily="Cambria Math"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gris_ab"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/llab4">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/donnees"
                        android:id="@+id/textView"
                        android:textSize="25sp"
                        android:fontFamily="Cambria Math"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/transparent" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/touteffacer"
                        android:id="@+id/button10"
                        android:width="200dp"
                        android:fontFamily="Cambria Math"
                        android:focusable="false"
                        android:enabled="true"
                        android:focusableInTouchMode="false"
                        android:onClick="onClickReinitialiserLeFichierXML"
                        android:clickable="true"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remerciements"
                android:id="@+id/button7"
                android:width="120dp"
                android:fontFamily="Cambria Math"
                android:focusable="false"
                android:enabled="true"
                android:focusableInTouchMode="false"
                android:onClick="onClickGoToRemerciements"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:padding="5dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puzzle Solver"
                android:id="@+id/button13"
                android:width="120dp"
                android:fontFamily="Cambria Math"
                android:focusable="false"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:onClick="onClickGoToSolveur"
                android:clickable="false"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:padding="5dp" />
        </FrameLayout>

    </LinearLayout>

</ScrollView>
