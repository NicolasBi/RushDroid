        <item name="buttonStyle">@style/MonBouton.DARK.SelectionDuNiveau</item>
    </style>

    <!-- Le thème qui sera appliqué à tous les textes -->
    <style name="MonApparenceDeTexte.DARK" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/sirg</item>
