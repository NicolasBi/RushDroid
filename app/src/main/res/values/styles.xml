    <!-- Le thème qui sera appliqué à toutes les AlertDialog-->
    <style name="MonAlertDialog.DARK" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">5px</item>
